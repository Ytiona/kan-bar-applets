.bt-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1000;
  display: flex;
  font-size: 28rpx;
  line-height: 2;
  border-bottom: 1px solid #eee;
  color: #8f8f8f;
  background-color: #fff;
}

.bt-nav-item {
  position: relative;
  z-index: 1000;
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}

.bt-nav-item.bt-target{
  color: #606060;
}

.bt-nav-item .bt-underline {
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
  width: 50%;
  height: 2px;
  background: #7aa2eb;
}

.bt-nav-item.bt-hover {
  background: #eee;
}

.bt-tab-content {
  transform: translate3d(0, 80rpx, 0);
}