.wcb-container>view {
  align-items: center;
}

.wcb-container .focus-btn {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
  color: #8f8f8f;
  background-color: #eee;
}

.wcb-container .write-comment .imgs {
  margin-bottom: 20rpx;
}

.wcb-container .write-comment .imgs scroll-view {
  position: relative;
  display: flex;
  height: 120rpx;
}

.wcb-container .write-comment .imgs .wrapper {
  position: absolute;
  left: 0;
  top: 0;
  height: 120rpx;
}

.wcb-container .write-comment .imgs .item {
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  height: 100%;
  width: 120rpx;
}

.wcb-container .write-comment .imgs .item:not(:last-child) {
  margin-right: 10rpx;
}

.wcb-container .write-comment .imgs .item .icon-close{
  padding: 10rpx;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 24rpx;
  color: #fff;
  text-shadow: 0 8px 8px rgba(0,0,0,0.1);
}

.wcb-container .write-comment image {
  width: 100%;
  height: 100%;
}


.wcb-container .write-comment .wrapper{
  display: flex;
  align-items: flex-start;
}

.wcb-container .write-comment .wrapper .upload-pic-btn {
  padding: 10rpx;
  margin-right: 10rpx;
}

.wcb-container .write-comment .wrapper .upload-pic-btn .icon-pic {
  font-size: 36rpx;
  color: #8f8f8f;
}

.wcb-container .write-comment .wrapper .upload-pic-btn.hover .icon-pic {
  color: #6a95e8;
}

.wcb-container .write-comment .wrapper textarea {
  padding: 16rpx 12rpx;
  border-radius: 8rpx;
  max-height: 300rpx;
  flex: 1;
  color: #606060;
  font-size: 28rpx;
  background-color: #eee;
}

.wcb-container .write-comment .wrapper .release-btn {
  width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  color: #6a95e8;
}

.wcb-container .write-comment .wrapper .release-btn.disable {
  color: #8f8f8f;
}