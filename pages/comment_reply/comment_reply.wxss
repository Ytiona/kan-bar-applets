page {
  padding-bottom: 200rpx;
}

.interval {
  height: 20rpx;
  margin: 20rpx 0;
  background-color: #eee;
}

.title {
  margin: 0 20rpx;
  font-size: 26rpx;
  font-weight: bold;
  color: #606060;
}

.comment-card:not(:last-child) {
  border-bottom: 1rpx solid #eee;
}

.operation {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  padding: 12rpx 30rpx;
  box-shadow: 0 0 10rpx 4rpx rgba(0,0,0,0.1);
  background-color: #fff;
}

.comment-option-item {
  padding: 30rpx;
  font-size: 26rpx;
  color: #606060;
}

.comment-option-item:not(:last-child) {
  border-bottom: 1rpx solid rgba(0,0,0,0.1);
}

.comment-option-item.hover {
  background-color: #eee;
}











.operation .container>view {
  align-items: center;
}

.operation .container .focus-btn {
  width: 100%;
  height: 64rpx;
  line-height: 64rpx;
  padding: 0 10rpx;
  border-radius: 8rpx;
  color: #8f8f8f;
  background-color: #eee;
}

.operation .container .write-comment .imgs {
  margin-bottom: 20rpx;
}

.operation .container .write-comment .imgs scroll-view {
  position: relative;
  display: flex;
  height: 120rpx;
}

.operation .container .write-comment .imgs .wrapper {
  position: absolute;
  left: 0;
  top: 0;
  height: 120rpx;
}

.operation .container .write-comment .imgs .item {
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  height: 100%;
  width: 120rpx;
}

.operation .container .write-comment .imgs .item:not(:last-child) {
  margin-right: 10rpx;
}

.operation .container .write-comment .imgs .item .icon-close{
  padding: 10rpx;
  position: absolute;
  top: 0;
  right: 0;
  font-size: 24rpx;
  color: #fff;
  text-shadow: 0 8px 8px rgba(0,0,0,0.1);
}

.operation .container .write-comment image {
  width: 100%;
  height: 100%;
}


.operation .container .write-comment .wrapper{
  display: flex;
  align-items: flex-start;
}

.operation .container .write-comment .wrapper .upload-pic-btn {
  padding: 10rpx;
  margin-right: 10rpx;
}

.operation .container .write-comment .wrapper .upload-pic-btn .icon-pic {
  font-size: 36rpx;
  color: #8f8f8f;
}

.operation .container .write-comment .wrapper .upload-pic-btn.hover .icon-pic {
  color: #6a95e8;
}

.operation .container .write-comment .wrapper textarea {
  padding: 16rpx 12rpx;
  border-radius: 8rpx;
  max-height: 300rpx;
  flex: 1;
  color: #606060;
  font-size: 28rpx;
  background-color: #eee;
}

.operation .container .write-comment .wrapper .release-btn {
  width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  text-align: center;
  font-size: 28rpx;
  color: #6a95e8;
}

.operation .container .write-comment .wrapper .release-btn.disable {
  color: #8f8f8f;
}