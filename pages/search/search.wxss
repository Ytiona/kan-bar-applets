.search-box .dropdown-menu {
  width: 100%;
}

.menu-right {
  flex: 1;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: #606060;
}

.search-box .icon-close {
  width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  text-align: center;
  margin: 0 18rpx;
  font-size: 18rpx;
  border-radius: 50%;
  color: #fff;
  background-color: #ccc;
}

.search-box .search-btn {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  text-align: center;
  line-height: 60rpx;
  color: #fff;
  background-color: #7aa2eb;
}

.search-box .search-btn.disable {
  background-color: #ddd;
}

.search-history {
  margin: 40rpx 20rpx;
}

.search-history .top {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
}

.search-history .top .title,
.hot-search-list .title{
  font-size: 30rpx;
  color: #606060;
}

.search-history .top .icon-delete{
  padding: 10rpx;
  font-size: 28rpx;
  color: #606060;
}

.search-history .content .item {
  display: inline-block;
  padding: 0 20rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  margin-right: 10rpx;
  margin-bottom: 18rpx;
  color: #606060;
  background-color: #eee;
}

.hot-search-list {
  margin: 50rpx 20rpx;
}

.hot-search-list .content {
  margin-top: 10rpx;
}

.hot-search-list .content .item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.hot-search-list .content .item .rank {
  width: 40rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  font-style: italic;
  text-align: center;
  color: #8f8f8f;
}

.hot-search-list .content .item .first-three {
  color: #7aa2eb;
}

.hot-search-list .content .item .text {
  flex: 1;
  font-size: 26rpx;
  color: #606060;
}

.hot-search-list .content .item .search-count {
  width: 150rpx;
  font-size: 20rpx;
  text-align: right;
  color: #8f8f8f;
}

.search-res .user-list {
  padding: 20rpx;
}
