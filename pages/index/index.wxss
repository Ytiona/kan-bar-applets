/* pages/index/index.wxss */

.nav-bar {
  position: fixed;
  top: 0;
  width: 100%;
  height: 46rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
}

.nav-bar image {
  height: 100%;
}

.header {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.header .icon-notice {
  display: flex;
  margin: 0 10rpx;
  font-size: 42rpx;
  color: #606060;
}

.header .search-box {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 60rpx;
  border-radius: 60rpx;
  background-color: #eeeeee;
}

.header .search-box .icon-search {
  display: flex;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #606060;
}

.header .search-box .tips {
  font-size: 26rpx;
  color: #606060;
}

.banner {
  margin: 0 20rpx;
  height: 320rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 1px solid #eee;
  background-color: #eeeeee;
}

.banner image {
  width: 100%;
}


.crux-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
}

.crux-wrapper .item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: #606060;
}

.crux-wrapper .item .icon {
  margin: 0 auto;
  margin-bottom: 10rpx;
  width: 90rpx;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 50%;
  color: #fff;
}

.crux-wrapper .item:nth-child(1) .icon {
  background-image: linear-gradient(to right, #84fab0, #8fd3f4);
}

.crux-wrapper .item:nth-child(2) .icon {
  background-image: linear-gradient(to right, #f6d365, #fda085);
}

.crux-wrapper .item:nth-child(3) .icon {
  background-image: linear-gradient(to right, #fbc2eb, #a6c1ee);
}

.crux-wrapper .item:nth-child(4) .icon {
  background-image: linear-gradient(to right, #accbee, #54adff);
}


.crux-wrapper .item .icon .iconfont {
  font-size: 38rpx;
}

.list-btn-wrapper {
  margin: 20rpx;
  display: flex;
}

.list-btn-wrapper view {
  flex: 1;
  margin-left: 20rpx;
}

.list-btn-wrapper view:first-child {
  margin-left: 0;
}

.list-btn-wrapper image {
  width: 100%;
}

.article-list {
  margin: 20rpx 0;
}

.article-list .top {
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx;
}

.article-list .top .title {
  font-size: 30rpx;
  color: #606060;
}

.article-list .top .more,
.article-list .top .more i {
  font-size: 26rpx;
  color: #8f8f8f;
}

.article-list .content {
  margin-top: 20rpx;
}
