/* pages/index/index.wxss */

.nav-bar {
  position: fixed;
  top: 0;
  width: 100%;
  height: 46rpx;
  padding-left: 20rpx;
  padding-bottom: 20rpx;
  background-color: #fff;
}

.nav-bar image {
  height: 100%;
}

.header {
  padding: 20rpx;
  display: flex;
  align-items: center;
}

.header .icon-notice {
  display: flex;
  margin: 0 10rpx;
  font-size: 42rpx;
  color: #606060;
}

.header .search-box {
  flex: 1;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  height: 60rpx;
  border-radius: 60rpx;
  background-color: #eeeeee;
}

.header .search-box .icon-search {
  display: flex;
  margin-right: 10rpx;
  font-size: 26rpx;
  color: #606060;
}

.header .search-box .tips {
  font-size: 26rpx;
  color: #606060;
}

.banner {
  margin: 0 20rpx;
  height: 320rpx;
  border-radius: 10rpx;
  overflow: hidden;
  border: 1px solid #eee;
  background-color: #eeeeee;
}

.banner image {
  width: 100%;
}

.list-btn-wrapper {
  margin: 20rpx;
  display: flex;
}

.list-btn-wrapper view {
  flex: 1;
  margin-left: 20rpx;
}

.list-btn-wrapper view:first-child {
  margin-left: 0;
}

.list-btn-wrapper image {
  width: 100%;
}

.article-list {
  margin: 40rpx 0;
}

.article-list .top {
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx;
}

.article-list .top .title {
  font-size: 30rpx;
  color: #606060;
}

.article-list .top .more,
.article-list .top .more i {
  font-size: 26rpx;
  color: #8f8f8f;
}

.article-list .content {
  margin-top: 20rpx;
}

.article-list .content .article-item {
  border-top: 18rpx solid #eee;
  padding: 0 20rpx;
}
